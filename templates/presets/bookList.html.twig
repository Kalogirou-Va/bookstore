{% block books %}
    <div class=" bg-gray-200">
                <div class="inline-block align-top align-center">
                    <img
                        src="{{ book.imagePath }}"
                        alt=""
                        class="h-40 w-30 "
                    />
               </div>
                <div class="inline-block pl-5 text-gray-700 font-bold text-sm py-2">
                    <ul class="list-disc">
                        <li>
                            <a href="/book/{{book.id}}" class=" hover:text-gray-500 hover:text-base ">{{ book.title }}</a>
                        </li>
                        <li>
                            <a href="/author/{{book.authorId.id}}" class=" hover:text-gray-500 hover:text-base">{{ book.authorId.name }}</a>
                        </li>
                        <li>
                            {{ book.releaseYear }}
                        </li>
                    </ul>
                </div>
            </div>

{% endblock %}