{% extends "base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <h1 class="text-6xl block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100">
            Book catalog
        </h1>
    </div>

    <div class="md:grid lg:grid-cols-4 gap-20 w-4/5 mx-auto py-15 ">
        {% for book in books %}
       
            <div class=" bg-gray-200">
                <div class="inline-block align-top align-center">
                    <img
                        src="{{ book.imagePath }}"
                        alt=""
                        class="h-40 w-30 "
                    />
               </div>
                <div class="inline-block pl-5 text-gray-700 font-bold text-sm py-2">
                    <ul class="list-disc">
                        <li>
                            <a href="" class=" hover:text-gray-500 hover:text-base">{{ book.title }}</a>
                        </li>
                        <li>
                            <a href="" class=" hover:text-gray-500 hover:text-base">{{ book.authorId.name }}</a>
                        </li>
                        <li>
                            {{ book.releaseYear }}
                        </li>
                    </ul>
                </div>
            </div>

        {% endfor %}
    </div>
{% endblock %}