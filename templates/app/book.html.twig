{% extends "base.html.twig" %}

{% block body %}

            
                <div class="px-60 py-20">
                    <div class="inline-block align-top align-center">
                        <img
                            src="{{ book.imagePath }}"
                            alt=""
                            class="h-60 w-30 "
                        />
                    </div>
                    
                    <div class="inline-block pl-5 text-gray-700 font-bold text-2xl py-5">
                        <ul class="list-disc">
                            <li>
                                <h1 class="">{{ book.title }}</h1>
                            </li>
                            <li>
                                <a href="/author/{{book.authorId.id}}" class=" hover:text-gray-500 hover:text-3xl">{{ book.authorId.name }}</a>
                            </li>
                            <li>
                                <h1 class="">Release Year: {{ book.releaseYear|date("d/m/Y") }}</h1>
                            </li>
                
                          
                        </ul>
                    </div>
                     <h6 class="text-sm pt-5">{{book.description}}</h6>
                </div>
                
            
               
          
{% endblock %}